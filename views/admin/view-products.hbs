<section>
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-info ml-auto" href="/admin/add-product">Add Product</a>
    </div><br><br><br>
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th>Image</th>
          <th>Customise</th>

        </tr>
      </thead>
      <tbody>

        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width:50px;height:50px" src='/product-images/{{this._id}}.png' alt="" </td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('do you want to delete {{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>
<script>
  $(function () {
    $('#productsTable').DataTable();
  });
</script>